---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<strong class='h2'>
		<a href='/'>{SITE_TITLE}</a>
	</strong>
	<nav>
		<HeaderLink href='/blog'>Blog</HeaderLink>
		<HeaderLink href='/about'>About</HeaderLink>
		<HeaderLink href='https://twitter.com/tubstrr' target='_blank'>Twitter</HeaderLink>
		<HeaderLink href='https://github.com/tubstrr' target='_blank'>GitHub</HeaderLink>
	</nav>
</header>
<style lang='scss'>
	header {
		padding-bottom: 2em;
		margin-bottom: 1em;
		border-bottom: 1px solid var(--line);
		nav {
			margin-top: 0;
		}
	}
</style>
